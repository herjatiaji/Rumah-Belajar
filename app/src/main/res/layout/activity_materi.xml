<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_bg"
    tools:context=".materi.MateriActivity">

    <TextView
        android:id="@+id/tv1"
        style="@style/titleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Halaman Materi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        tools:text="Selamat Datang dan Selamat Belajar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:background="@drawable/home_bg"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="464dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_layout_white"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:onClick="readMateriB1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab1" />

                <Button
                    android:id="@+id/opsi_b1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:padding="0dp"
                    android:text="BAB I"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="readMateriB2"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab2" />

                <Button
                    android:id="@+id/opsi_b2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:padding="0dp"
                    android:text="BAB II"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="readMateriB3"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab3" />

                <Button
                    android:id="@+id/opsi_b3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:padding="0dp"
                    android:text="BAB III"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linear1"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="readMateriB4"
                android:background="@drawable/bg_layout_white" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab4"/>

                <Button
                    android:id="@+id/opsi_b4"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="BAB IV"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="readMateriB5"
                android:background="@drawable/bg_layout_white" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab5"/>

                <Button
                    android:id="@+id/opsi_b5"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="BAB V"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="readMateriB6"
                android:background="@drawable/bg_layout_white" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab6"/>

                <Button
                    android:id="@+id/opsi_b6"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="BAB VI"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linear2"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:onClick="readMateriB7"
                android:background="@drawable/bg_layout_white" >

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/logo_bab7"/>

                <Button
                    android:id="@+id/opsi_b7"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="BAB VII"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>